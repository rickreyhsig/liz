<p id="notice"><%= notice %></p>

<p>
  <strong>Project:</strong>
  <%= @project.last_name %>
</p>

<table>
  <thead>
    <tr>
      <th>Field Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.fields.each do |field| %>
      <tr>
        <td><%= field.name %></td>
        <td><%= field.value %></td>
        <td><%= link_to 'Edit', edit_field_path(field) %></td>
        <td><%= link_to 'Delete', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Field', new_field_path(project_id: @project.id) %> |
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Home', root_path %>
